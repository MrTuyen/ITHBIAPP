@using ProductionApp.Models
@model List<PROC_GET_TOP5_ABSM_UPDATE_Result>
@section Styles {
    <!-- BEGIN PAGE LEVEL PLUGIN STYLES -->
    <link href="~/Content/themes/assets/plugins/bootstrap-switch/css/bootstrap-switch.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/assets/plugins/bootstrap-select/bootstrap-select.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/assets/plugins/jquery-multi-select/css/multi-select.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/assets/plugins/bootstrap-fileupload/bootstrap-fileupload.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/assets/plugins/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
    <!-- END PAGE LEVEL PLUGIN STYLES -->
}
@{ 
    string status = ViewBag.Status;
}

@using (Html.BeginForm("UploadLaborAbsm", "LaborAbsm", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
        <!-- BEGIN PAGE HEADER-->
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN PAGE TITLE & BREADCRUMB-->
            <h3 class="page-title">
                <small>Upload Labor Absenteeism</small>
            </h3>
            <!-- END PAGE TITLE & BREADCRUMB-->
        </div>
    </div>
    <!-- END PAGE HEADER-->

        <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet box gray">
        <div class="portlet-title">
            <table class="table-actions-wrapper margin-bottom-10">
                <tr>
                    <td style="color:red" colspan="2">@(status == null ? "" : status.ToString())</td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="file" name="UploadedFile" class="uploader  margin-bottom-10" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="submit" name="Submit" value="Submit" class="btn green purple-stripe margin-bottom-10" />
                    </td>
                </tr>
            </table>

        </div>
        <div class="portlet-body ">
            <div class="row margin-bottom-0 margin-top-20" id="DivShowData">
                <div class="row">
                    <div class="table-responsive" style="align-items:center">
                        <table class="table table-striped table-bordered table-hover align-center" style="width:40%; margin-left:10px;">
                            <thead>
                                <tr>
                                    <th colspan="3" align="center" style="text-align:center">UPDATE HISTORY</th>
                                </tr>
                                <tr>
                                    <th>No.</th>
                                    <th>Absenteeism Data Date</th>
                                    <th>User Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Count> 0)
                                {
                                    for (int i = 0; i < Model.Count; i++)
                                    {
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td>@(Model[i].DATE.Value.ToString("MM/dd/yyyy"))</td>
                                            <td>@Model[i].TS_1_USER</td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
     </div>
 }
