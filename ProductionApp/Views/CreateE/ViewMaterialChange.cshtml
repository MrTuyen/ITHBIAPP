@*@model ECN.Models.ECNDetails*@

@model ECN.Models.ViewECNModel

@if (Model.MaterialInforModel.lsMaterialInfor.Count > 0)
{
    <div class="row">
        <div class="table-responsive col-md-12">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Material change type</th>
                        <th>Material code</th>
                        <th>Material name</th>
                        <th>Qty before change</th>
                        <th>Qty after change</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @for (var i = 0; i < Model.MaterialInforModel.lsMaterialInfor.Count; i++)
                        {
                            <td>i</td>
                            <td>@Html.DisplayFor(m => m.MaterialInforModel.lsMaterialInfor[i].DESC)</td>
                            <td>@Html.DisplayFor(m => m.MaterialInforModel.lsMaterialInfor[i].MAT_CODE)</td>
                            <td>@Html.DisplayFor(m => m.MaterialInforModel.lsMaterialInfor[i].MAT_NAME)</td>
                            <td>@Html.DisplayFor(m => m.MaterialInforModel.lsMaterialInfor[i].CURR_AMOUNT)</td>
                            <td>@Html.DisplayFor(m => m.MaterialInforModel.lsMaterialInfor[i].CHANGE_AMOUNT)</td>
                            <td style="white-space: nowrap">
                                <a href="~/edit" name="editbtn" class="btn btn-xs purple"><i class="fa fa-edit"></i> Edit</a>
                                <a href="~/delete" name="deletebtn" class="btn btn-xs red"><i class="fa fa-trash-o"></i> Delete</a>
                            </td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}