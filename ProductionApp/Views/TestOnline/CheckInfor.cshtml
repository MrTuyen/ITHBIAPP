
@{
    ViewBag.Title = "CheckInfor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ProductionApp.Models;
@model dynamic
@section styles{
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script type="text/javascript">

        window.history.forward();
        function noBack() {
            window.history.forward();
        }
    </script>
    <style>

        .modal-title {
            font-size: 17px
        }

        #btnmore {
            margin-left: 20px;
        }

        .rowHidden {
            display: none;
        }

        .showInfor > .row {
            margin-top: 20px;
        }

        .btnJoin {
            text-align: center;
        }

        .joining {
            width: 150px;
        }

        .titleInfor {
            font-weight: bold;
        }
    </style>
}

<div class="container">

    <h2><b>Join the exam</b></h2>
    <div class="col-md-2"></div>
    <div class="col-md-7">

    </div>
    <div class="col-md-3" style="margin-bottom: 40px"></div>
    @{ var n = 0;}
    @foreach (InforExamToAccept p in Model.dataSource)
    {

        n = n + 1;

        <div class="panel panel-default">
            <div class="panel-heading"><b>Thông tin chi tiết của bài thi/ The detail information of the exam</b></div>
            <div class="panel-body showInfor">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-2 text-right titleInfor">Bài thi: </div>
                    <div class="col-md-7  text-left"> @p.ExamName </div>
                </div>
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-2 text-right titleInfor">Khóa đào tạo:</div>
                    <div class="col-md-7  text-left"> @p.CourseName</div>
                </div>
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-2 text-right titleInfor">Thời gian thi:</div>
                    <div class="col-md-7  text-left"> @p.Time phút</div>
                </div>
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-2 text-right titleInfor">Ngày thi:</div>
                    <div class="col-md-7  text-left">  @p.Date</div>
                </div>
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-2 text-right titleInfor">Số câu:</div>
                    <div class="col-md-7  text-left"> @p.QuestionNumber câu</div>
                </div>
                <div class="row btnJoin"><a href="@Url.Action("GetAnExam","OnlineTraining",new { id = @p.ExamID, Emp_ID = @p.Emp_ID })"><button type="button" class="btn btn-warning joining" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-time"></span>&nbsp;&nbsp; Vào thi</button></a></div>

            </div>
        </div>

    }

</div>

@if (n == 0)
{
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="panel panel-info">
                <div class="panel-heading" style="color: black"><span class="glyphicon glyphicon-bell"></span> <b>Thông báo</b></div>
                <div class="panel-body">
                    <p>Bạn không có bài thi nào ngày hôm nay</p>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
}
