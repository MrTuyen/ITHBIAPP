@{
    ViewBag.Title = "Add recut";
}
@section styles{
    <style>
     .page-content {
         padding-top: 0 !important;
     }
     .select-checkbox{
         transform: scale(1.5)
     }
     input[type=checkbox]{
         cursor: pointer;
     }
    </style>
}
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <div class="page-title form-row">
            <button class="btn btn-light btn-sm" onclick="Refresh()"><i class="fa fa-arrow-left"></i> &nbsp;Back</button>
            <p class="text-center">
                <small><strong>Add recut request</strong></small>
            </p>
        </div>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading"><b>Thông tin phiếu</b></div>
    <div class="panel-body">
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="txtWO">WO</label>
                <input type="text" class="form-control" id="txtWO" placeholder="" autofocus onkeydown="GetWOInfo()">
            </div>
            <div class="form-group col-md-2">
                <label for="txtMnfStyle">Sản xuất phê duyệt</label>
                <select class="form-control" id="txtRequestManager">
                    @foreach (var item in (List<ProductionApp.Models.WH_User_Approver>)ViewData["Manager"])
                    {
                        <option value="@item.value">@item.fullname</option>
                    }
                </select>
            </div>  
            <div class="form-group col-md-2">
                <label for="txtSellingStyle">Selling Style</label>
                <input type="text" class="form-control" id="txtSellingStyle" placeholder="" disabled>
            </div>
            <div class="form-group col-md-2">
                <label for="txtSize">Size</label>
                <input type="text" class="form-control" id="txtSize" placeholder="" disabled>
            </div>
            <div class="form-group col-md-2">
                <label for="txtMnfColor">Color</label>
                <input type="text" class="form-control" id="txtMnfColor" placeholder="" disabled>
            </div>
            <div class="form-group col-md-2">
                <label for="txtMnfStyle">Manufacturing style</label>
                <input type="text" class="form-control" id="txtMnfStyle" placeholder="" disabled>
            </div>  
            <div class="form-group text-right mr-2">
                <label for="">&nbsp;</label>
                <br />
                <button class="btn btn-success" onclick="AddRequest()">SUBMIT</button>
            </div> 
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading"><b>Danh sách vật tư</b></div>
    <div class="panel-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th></th>
                    <th>Mã vật tư/ Material code</th>
                    <th>Tổng/ Total</th>
                    <th>Lỗi may (dz)</th>
                    <th>Lỗi cắt (dz)</th>
                    <th>Thiếu may (dz)</th>
                    <th>Thiếu cắt (dz)</th>
                    <th>Lỗi vải (dz)</th>
                    <th>May test (dz)</th>
                    <th>Tên tổ trưởng</th>
                </tr>
            </thead>
           <tbody id="table-material-code">
           </tbody>
        </table>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/HBI/Controller/RecutController.js"></script>
}